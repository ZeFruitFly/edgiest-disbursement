/* ------------------------------------
   ME / MY WHIRLED PAGE
-------------------------------------*/

.myWhirled {
  width: 100%;
}

.myWhirled .MustValidate {
  padding: 10px;
  border: 2px solid #FF0000;
  margin-bottom: 10px;
}

.myWhirled .MustValidate div {
  display: inline;
}

.myWhirled .NewsAndFriends {
  width: 665px;
  margin: 0 auto;
  padding: 10px 0px;
}

.myWhirled .RightBits {
  margin-left: 10px;
}

.myWhirled .RightBits .QuickNav {
  font-size: 12px;
  width: 182px;
}

.myWhirled .NewsBar {
  background: url(/images/me/me_news_title_bg.png) repeat-x bottom left;
  margin: 5px;
  padding: 5px;
  position: relative;
}

.myWhirled .NewsTitle {
  color: #216CA3;
  font-size: 20px;
}

.myWhirled .NewsLink {
  position: absolute; /* hackity hack */
  right: 0;
  font-size: 11px;
  top: 14px;
}

/* FeedBox also appears on profile; base styles in person.css */
.myWhirled .FeedBox {
  width: 470px;
}

.myWhirled .promoBox {
  width: 470px;
}

.myWhirled .FeedBox .FeedWidget {
  width: 463px;
}

.myWhirled .FeedBox .FeedCategoryHeader {
  font-size: 13px;
  padding: 10px 0 5px 0;
  background-color: #d8d8d8;
  color: #333333;
}

.myWhirled .FeedBox .FeedShowMore {
  margin-right: 10px;
  float: right;
}

.myWhirled .Newbie {
  width: 100%;
  text-align: center;
  font-size: 12px;
  margin-bottom: 5px;
}

.myWhirled .Newbie a {
  color: #777777;
}

.myWhirled .Newbie img {
  width: 75px;
}

.myWhirled .Stream {
}

.myWhirled .Stream .messagePanel .Scroller {
  width: 415px;
}

.myWhirled .Stream .Reply .Scroller {
  width: 370px;
}

.myWhirled .Stream .CommentsExpand, .myWhirled .Stream .CommentsLoading {
  width: 473px;
}

