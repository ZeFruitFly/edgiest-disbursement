/* ------------------------------------
   BADGE DISPLAYS ANYWHERE
-------------------------------------*/
.awardDisplay {
  position: relative;
  width: 156px;
  height: 141px;
}

.awardDisplay .AwardIcon {
  position: absolute;
  left: 7px;
  top: 7px;
  margin-left: 0;
}

.awardDisplay .AwardName {
  position: absolute;
  left: 90px;
  top: 8px;
  width: 57px;
  color: #1c4c74;
  font-weight: bold;
  font-size: 12px;
  text-align: center;
  line-height: 12px;
}

.awardDisplay .CoinReward {
  position: absolute;
  left: 90px;
  top: 48px;
  font-size: 12px;
  color: black;
}

.awardDisplay .CoinReward img {
  float: left;
  padding-top: 1px;
}

.awardDisplay .CoinReward div {
  float: left;
  padding-left: 3px;
}

.awardDisplay .AwardDescription {
  position: absolute;
  top: 69px;
  left: 7px;
  width: 142px;
  height: 43px;
  color: #4a7595;
  font-size: 12px;
  text-align: center;
}

.awardDisplay .WhenEarned, .awardDisplay .ProgressBar {
  position: absolute;
  top: 118px;
  left: 7px;
}

.awardDisplay .ProgressLabel {
  position: absolute;
  top: 118px;
  left: 31px;
}

.awardDisplay .WhenEarned {
  width: 142px;
  font-size: 12px;
  text-align: center;
}

.awardDisplay .ProgressBar .Fill {
  background-repeat: repeat;
}

.awardDisplay .GoButton {
  position: absolute;
  top: 118px;
  right: 7px;
}

.BoxedAward {
  border-color: #d6e8f6;
  border-style: solid;
  border-width: 1px;
  float: left;
  margin-left: 3px;
  margin-top: 3px;
}

.awardDisplay a.external {
  padding-right: 11px;
  color: #4a7595;
}

.awardDisplay .Delete {
  position: absolute;
  top: 46px;
  left: 90px;
  width: 109px;
  text-align: center;
  font-size: 12px;
}

.deleteConfirmation {
  margin-left: 30px;
  margin-right: 30px;
  text-align: center;
  background-color: white;
}

.deleteConfirmation .ButtonRow {
  display: inline;
}

.deleteConfirmation .Inner {
  padding: 10px;
}

