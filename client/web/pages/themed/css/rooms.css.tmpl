/**
 * CSS styles for the Room interfaces.
 */

/* ROOMS PANEL */

.roomsPanel {
  width: 100%;
  background: #FFFFFF;
}

.roomsPanel .Intro {
  color: #216CA3;
  font-size: 14px;
  padding-top: 5px;
  width: 500px;
}

.roomsPanel .Info {
  width: 100%;
  padding: 0 8px 24px;
}

.roomsPanel .Room {
  padding-bottom: 10px;
  width: 175px;
  overflow: hidden;
}

.roomsPanel .Room .WinnerRank {
  font-weight: bold;
}

.roomsPanel .marquee {
  width: 260px;
}

.roomsPanel .TourButton {
  background-image: url(/images/rooms/tour.png);
  width: 120px;
  height: 97px;
}

.roomsPanel .TourButton-up-hovering {
  background-image: url(/images/rooms/tour_over.png);
}

.roomsPanel .TourButton-down-hovering {
  background-image: url(/images/rooms/tour_down.png);
}

/* ROOM DETAIL PANEL */

.roomDetailPanel {
  width: 100%;
}

.roomDetailPanel .Title {
  font-weight: bold;
  font-size: 22px;
}

.roomDetailPanel .themeNote {
  color: #4C7799;
  font-size: 14px;
}

/* ------------------------------------
   DESIGN YOUR WHIRLED CONTEST WINNERS
-------------------------------------*/

.designWinnersPanel {
  background: #61ABD0 url(/images/whirled/bg_gradient_long_blue.png) repeat-x;
  width: 100%;
  min-height: 100%;
}

.designWinnersPanel .Header {
  width: 100%;
  height: 125px;
  overflow-x: hidden;
}

.designWinnersPanel .Blurb {
  font-family: "Trebuchet MS",Arial,Helvetica,sans-serif;
  font-size: 18px;
  font-weight: bold;
  color: #FFFFFF;
  margin: 10px 100px;
}

.designWinnersPanel .Blurb a {
  color: #FFFFFF;
}

.designWinnersPanel .Winners {
  background: url(/images/rooms/design_winners_box_bg.png) no-repeat;
  width: 646px;
  height: 406px;
  margin: 20px auto;
}

.designWinnersPanel .Winners .Title {
  font-family: "Trebuchet MS",Arial,Helvetica,sans-serif;
  font-size: 26px;
  font-weight: bold;
  color: #3595B7;
  padding: 20px 0 0 60px;
}

.designWinnersPanel .Winners .SubTitle {
  font-size: 14px;
  font-weight: bold;
  color: #3595B7;
  padding: 5px 0 10px 60px;
}

.designWinnersPanel .HonorableTop,
.designWinnersPanel .HonorableBottom {
  margin-left: 50px;
}

.designWinnersPanel .HonorableMention {
  width: 175px;
  height: 145px;
  overflow: hidden;
  text-align: center;
}

.designWinnersPanel .HonorableTop .HonorableMention {
  margin-left: 10px;
}

.designWinnersPanel .HonorableBottom .HonorableMention {
  margin-left: 70px;
}

.designWinnersPanel .TooCool {
  margin-left: 90px;
  width: 500px;
  white-space: nowrap;
  overflow-x: hidden;
}
