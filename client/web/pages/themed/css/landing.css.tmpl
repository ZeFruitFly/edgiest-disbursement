/**
 * Styles for Landing pages.
 */

/* ------------------------------------
   BLUE LANDING PAGE GENERAL DESIGN (SHARED)
-------------------------------------*/

/* Spans the entire width of the page */
.BlueLandingPage {
  background: #073448;
  width: 100%;
  position: absolute;
  top: 0;
  left: 0;
  font-family: Arial, Helvetica, sans-serif;
  font-size: 13px;
  color: #083b51;
}
.BlueLandingPage a {
  color: #083b51;
}

.BlueLandingPage .Header {
  margin: 0 auto;
}

.BlueLandingPage p {
  margin: 10px 20px;
  line-height: 20px;
}

.BlueLandingPage ul,
.BlueLandingPage ol {
  line-height: 20px;
}

.BlueLandingPage h3 {
  font-size: 17px;
  font-weight: bold;
  font-family: "Trebuchet MS",Arial,Helvetica,sans-serif;
  margin: 25px 0 10px 0;
}

.BlueLandingPage .Content {
  background: url(/images/landing/blue_landing_content_bg.png) repeat-y top center;
  width: 899px;
  margin: 0 auto;
  min-height: 100%;
  padding-bottom: 20px;
}

.BlueLandingPage .Footer {
  background-color: #76c4e7;
  width: 100%;
  height: 50px;
  border-top: #caecfc 3px solid;
  position: relative;
}

.BlueLandingPage .Footer .LandingCopyright {
  margin: 10px auto;
  background-color: transparent;
}

/* ------------------------------------
   WIDE CONTENT BOX (SHARED)
-------------------------------------*/

.wideContentBox {
  width: 809px;
  margin: 15px auto;
}

.wideContentBox .BoxContent {
  background: #FFFFFF url(/images/landing/wide_content_box_bg.png) repeat-y;
  padding: 5px 20px;
}

.wideContentBox .BoxTop {
  background: url(/images/landing/wide_content_box_top.png) no-repeat;
  height: 12px;
}

.wideContentBox .BoxBottom {
  background: url(/images/landing/wide_content_box_bottom.png) no-repeat;
  height: 13px;
}

.wideContentBox .Title,
.wideContentBox .TitleAlt {
  font-size: 26px;
  font-weight: bold;
  font-family: "Trebuchet MS",Arial,Helvetica,sans-serif;
  color: #ff752a;
  margin: 0 0 10px 0;
}

.wideContentBox .TitleAlt {
  color: #3595b7;
}

/* ------------------------------------
   LANDING PAGE
-------------------------------------*/

.landing, .landing td {
  font-size: 12px;
}

.landing .Explain .Subtitle {
  white-space: nowrap;
}

.landing .Rightbits {
  width: 305px;
  margin-left: 20px;
}

.landing .Connect img { /*fbconnect*/
  padding-left: 115px;
  padding-top: 5px;
}

.landing .Title {
  font-family: "Trebuchet MS", Arial, Helvetica, sans-serif;
  font-size: 24px;
}

.landing .Subtitle {
  font-size: 16px;
}

.landing .Video {
  padding: 30px 0px 0px 35px;
}

.landing .Video .gwt-Image {
  margin: 0px;
}

.landing .gwt-TextBox, .landing .gwt-PasswordTextBox, .landing .gwt-ListBox {
  border: 1px solid #5C5D61;
}

/*.landing .gwt-TextBox, .landing .gwt-PasswordTextBox {
  width: 175px;
}*/

.landing .actionLabel {
  color: inherit;
}

/* ------------------------------------
   LANDING COPYRIGHT (SHARED BY MULTIPLE PAGES)
-------------------------------------*/

.LandingCopyright {
  width: 708px;
  margin: auto;
  height: 25px;
  font-size: 14px;
  text-align: center;
  color: #226B98;
  padding-top: 7px;
  background-color: #3B85B2;
}

.LandingCopyright a {
  color: #0F3F70;
}

/* ------------------------------------
   CREATORS LANDING
-------------------------------------*/

.creatorsPanel {
  font-family: Arial, Helvetica, sans-serif;
  font-size: 12px;
  background: #073449 url(/images/landing/creators_bg.jpg) no-repeat top center;
  width: 100%;
  height: 1109px;
  position: absolute;
  top: 0;
  left: 0;
}

.creatorsPanel .Content {
  width: 620px;
  height: 1109px;
  margin: auto;
}

.creatorsPanel .LandingCopyright {
  width: 620px;
  text-align: center;
}
.creatorsPanel .LandingCopyright,
.creatorsPanel .LandingCopyright a {
  font-size: 14px;
  color: #12718f;
  background: none;
  padding: 0;
}

.creatorsPanel .GetStartedButton {
  width: 258px;
  height: 114px;
  border: none;
  cursor: pointer;
  background: transparent url(/images/landing/get_started_button.png);
}
.creatorsPanel .GetStartedButton-down-hovering {
  background: transparent url(/images/landing/get_started_button_over.png);
}
.creatorsPanel .GetStartedButton-up-hovering {
  background: transparent url(/images/landing/get_started_button_over.png);
}

/* ------------------------------------
   FLASH GAME CONTEST LANDING PAGE
-------------------------------------*/

.gameContestPanel .Header {
  width: 882px;
  height: 241px;
  background: url(/images/landing/contests/gamecon_header_bg.png) no-repeat;
}

/* ------------------------------------
   DEVELOPER INTRO LANDING PAGE
-------------------------------------*/

.developerIntroPanel .Header {
  width: 882px;
